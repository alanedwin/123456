@model IEnumerable<_123456.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<h2>Customers</h2>
@if (!Model.Any())
{
    <p>We don't have any customers yet.</p>
}
else
{ <div class="bs-docs-section">
    <div class="bs-component">
        <table class="table table-striped table-hover">

            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(customer.ForeName + " " + customer.Surname, "Details", "Customers", new { id = customer.Id }, null)</td>


                    </tr>
                }
                </tbody>
            </table>
    </div>
</div>


}
